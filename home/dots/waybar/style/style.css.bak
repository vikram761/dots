@import "style/catppuccin-mocha.css";

* {
    border: none;
    border-radius: 0;
    font-family: "JetBrainsMono Nerd Font";
    font-weight: bold;
    font-size: 13px;
    min-height: 0;
}

window#waybar {
    background: @foreground;
    padding: 2px 0px;
    border-radius: 0px;
    color: #2b2b2c;
}

tooltip {
    background: #e7e7ec;
    opacity: 0.8;
    border-radius: 10px;
    border-width: 2px;
    border-style: solid;
    border-color: #11111b;
}

tooltip label{
    color: #2b2b2c;
}

#workspaces {
  background: transparent;
  border-radius: 20px;
  padding: 2px 3px;
  margin: 0px 3px;
}

#workspaces button {
  padding: 0px 4px;
  margin: 3px 2px;
  border-radius: 20px;
  background-color: #16325B;
  transition: all 0.5s cubic-bezier(0.11, 1.09, 0.6,0.96);
}

#workspaces button.active {
  margin: 3px 2px;
  padding: 0px 17px;
  background-color: #F05A7E;
}

#workspaces button:hover {
  background-color: #F05A7E;
}


#custom-launch_wofi,
#custom-lock_screen,
#custom-light_dark,
#custom-power_btn,
#custom-power_profile,
#custom-weather,
#window,
#cpu,
#disk,
#custom-updates,
#memory,
#clock,
#battery,
#pulseaudio,
#network,
#tray,
#temperature,
#workspaces,
#backlight {
    opacity: 0.8;
    padding: 2px 10px;
    border: 0px;
}


#temperature.critical {
    color: #e92d4d;
}


#custom-power_profile {
    color: #1d7715;
    border-left: 0px;
    border-right: 0px;
}

#window {
    border-radius: 10px;
    margin-left: 20px;
    margin-right: 20px;
}

#custom-launch_wofi {
    color: #407cdd;
    margin-left: 10px;
    border-right: 0px;
}

#pulseaudio {
    color: @mantle;
    border-left: 0px;
    border-right: 0px;
}

#pulseaudio.microphone {
    color: #ad6bfd;
    border-left: 0px;
    border-right: 0px;
}

#battery {
    color: @background;
    border-left: 0px;
}
